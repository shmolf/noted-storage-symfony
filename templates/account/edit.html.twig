{% extends 'base.html.twig' %}
{% import "account/inputs.html.twig" as accountInputs %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('user-edit') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-edit') }}
{% endblock %}

{% block pageContext %}- Account{% endblock %}

{% block body %}
    <div id="form-errors"></div>
    <form id="account-details" method="post" action="{{ path('account.edit.save') }}">
        <div class="row">
            <div class="input-field col s12 m6">
                {{ accountInputs.email(user.email) }}
            </div>
            <div class="input-field col s12 m6">
                {{ accountInputs.password({required: false, showHints: true}) }}
            </div>
        </div>
        <input id="token" type="hidden" name="_csrf_token" value="{{ csrf_token('user-edit') }}" />
        <button id="save-btn" type="submit" class="btn right">Save</button>
    </form>
{% endblock %}
